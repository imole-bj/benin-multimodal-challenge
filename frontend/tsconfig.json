{
	"compilerOptions": {
		"target": "ES2015",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"@/*": ["./src/*"],
			"@/assets/*": ["./public/assets/*"],
			"@/components*": ["./src/components/*"],
			"@/layouts*": ["./src/layouts/*"],
			"@/data/*": ["./src/data/*"],
			"@/hooks/*": ["./src/hooks/*"],
			"@/utils/*": ["./src/utils/*"]
		}
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/components/chat/chat-area/index.jsx", "src/components/homes/home-2/popup-link.jsx"],
	"exclude": ["node_modules"]
}
